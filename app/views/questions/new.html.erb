<div class="full" style="height: calc(100vh - 65px); background-color: #F2F2F3;">
  <div class="ask-entire">
        <%= form_with model: @question, local: true do |form| %>
           <div class="form-coloring">
              <div class="head-part"></div>
              <div class="main-part">
                <div class="main-detail">
                    <div class="main-title">
                      <%= form.text_field :title, placeholder: "タイトル" %>
                    </div>
                    <div class="main-question">
                      <%= form.text_area :content, placeholder: "質問内容" %>
                    </div>
                    <div class="main-name">
                      <%= form.text_field :name, placeholder: "名前" %>
                    </div>
                    <div class="main-button">
                      <%= form.submit 'POST' %>
                    </div>
                  </div>
              </div>
          </div>
        <% end %>
   </div>
</div>